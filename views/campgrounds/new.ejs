    <div class="row w-100 h-100 d-flex justify-content-center">
        <div class="col-5">
            <h1>Add New Campground</h1>
            <form action="/campgrounds" method="post" class="needs-validation" novalidate>
                <div class="mb-3">
                    <label for="title" class="form-label">Campground Title</label>
                    <input type="text" name="campground[title]" class="form-control" id="title" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>                  
                </div>
                <div class="mb-3">
                    <label for="location" class="form-label">Location</label>
                    <input type="text" name="campground[location]" class="form-control" id="location" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>                  
                </div>
                <div class="mb-3">
                    <label for="price" class="form-label">Price <span class="text-muted"><small>/night</small></span></label>
                    <div class="input-group">
                        <span class="input-group-text">$</span>
                        <input type="text" class="form-control" name="campground[price]" id="price" aria-label="Amount (to the nearest dollar)" required>
                        <span class="input-group-text">.00</span>
                    </div>
                    <div class="valid-feedback">
                        Looks good!
                    </div>                  
                </div>  
                <div class="mb-3">
                    <label for="image" class="form-label">Image URL</label>
                    <input type="text" name="campground[image]" class="form-control" id="image">
                </div>
                <div class="form-floating mb-3">
                    <textarea class="form-control" name="campground[description] id="floatingTextarea2" style="height: 100px" required></textarea>
                    <label for="floatingTextarea2">Write the location description</label>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <button type="submit" class="btn btn-success">Add Campground</button>
            </form>
        </div>
    </div>
    
    <footer>
        <a href="/campgrounds">All Campgrounds</a>
    </footer>

