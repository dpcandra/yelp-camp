
<% layout('layouts/boilerplate') %>
    <div id="map" style="width: 100%; height: 300px;"></div>
    <h1>All Campgrounds</h1>

    <div>
        <a href="/campgrounds/new">Add New</a>
    </div>


     <% for( let campground of campgrounds ) { %>
        <div class="card mb-3">
            <div class="row">
                <div class="col-4">
                    <% if(campground.images.length){ %>
                        <img class="img-fluid" src="<%= campground.images[0].url %>">
                    <% }else{ %>
                        <img class="img-fluid" src="">
                    <% } %>
                </div>
                <div class="col-8">
                    <h5><%= campground.title %></h5>
                    <p><%= campground.description %></p>
                    <p class="text-muted my-2"><small><%= campground.location %></small></p>
                    <a class="btn btn-primary" href="/campgrounds/<%= campground.id %>" role="button">View <%= campground.title %></a>
                </div>
            </div><!--rpw-->
        </div><!--card-->
    <% } %>

    <script>
        const mapToken = '<%- process.env.MAPBOX_TOKEN %>';
        const campgrounds = {features: <%- JSON.stringify(campgrounds) %>};
    </script>


    <script src="/js/clusterMap.js"></script>